cc_library_headers {
    name: "libaudio_extn_headers",
    vendor: true,
    export_include_dirs: ["inc"],
}

cc_library_shared {
    name: "libhfp_pal",
    defaults: [
        "android_hardware_qtiaudio_config_defaults",
    ],
    vendor: true,

    cflags: [
        "-Wall",
        "-Werror",
        "-Wno-unused-function",
        "-Wno-unused-variable",
    ] + select(soong_config_variable("ANDROID", "target_board_auto"), {
        "true": ["-DPLATFORM_AUTO"],
        default: [],
    }),

    srcs: ["Hfp.cpp"],

    include_dirs: [
        "external/expat/lib",
        "system/media/audio_utils/include",
    ],

    local_include_dirs: ["inc"],

    header_libs: [
        "libarpal_headers",
        "libaudio_hal_headers",
        "libhardware_headers",
        "libsystem_headers",
    ],

    shared_libs: [
        "libar-pal",
        "libaudioroute",
        "libaudioutils",
        "libcutils",
        "libdl",
        "libexpat",
        "liblog",
    ],
}

cc_library_shared {
    name: "libfmpal",
    defaults: [
        "android_hardware_qtiaudio_config_defaults",
    ],
    vendor: true,

    cflags: [
        "-Wall",
        "-Werror",
        "-Wno-unused-function",
        "-Wno-unused-variable",
    ],

    srcs: ["FM.cpp"],

    include_dirs: [
        "external/expat/lib",
        "system/media/audio_utils/include",
    ],

    local_include_dirs: ["inc"],

    header_libs: [
        "libarpal_headers",
        "libaudio_hal_headers",
        "libhardware_headers",
        "libsystem_headers",
    ],

    shared_libs: [
        "libar-pal",
        "libaudioroute",
        "libaudioutils",
        "libcutils",
        "libdl",
        "libexpat",
        "liblog",
    ],
}

cc_library_shared {
    name: "libbatterylistener",
    defaults: [
        "android_hardware_qtiaudio_config_defaults",
    ],
    vendor: true,

    cflags: [
        "-DHEALTH_AIDL",
        "-Wall",
        "-Werror",
        "-Wno-unused-function",
        "-Wno-unused-variable",
    ],

    srcs: ["battery_listener.cpp"],

    local_include_dirs: ["inc"],

    shared_libs: [
        "android.hardware.health-V1-ndk",
        "android.hardware.power@1.2",
        "libaudioutils",
        "libbase",
        "libbinder_ndk",
        "libcutils",
        "libdl",
        "libhidlbase",
        "liblog",
        "libutils",
    ],

    static_libs: ["libhealthhalutils"],
